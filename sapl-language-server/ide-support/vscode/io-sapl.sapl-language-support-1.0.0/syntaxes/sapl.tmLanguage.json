{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SAPL",
  "scopeName": "source.sapl",
  "fileTypes": ["sapl"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#attributes" },
    { "include": "#constants" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sapl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.sapl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sapl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sapl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.sapl",
          "match": "\\b-?\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sapl",
          "match": "\\b(policy|set|for|first-applicable|only-one-applicable|deny-overrides|permit-overrides|deny-unless-permit|permit-unless-deny)\\b"
        },
        {
          "name": "keyword.other.entitlement.sapl",
          "match": "\\b(permit|deny)\\b"
        },
        {
          "name": "keyword.other.clause.sapl",
          "match": "\\b(where|advice|obligation|transform|on|resource)\\b"
        },
        {
          "name": "keyword.other.target.sapl",
          "match": "\\b(action|subject|environment)\\b"
        },
        {
          "name": "keyword.control.conditional.sapl",
          "match": "\\b(if|then|else)\\b"
        },
        {
          "name": "keyword.operator.logical.sapl",
          "match": "\\b(var|as|in|import|schema|each)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.sapl",
          "match": "\\b(and|or|not)\\b|&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.comparison.sapl",
          "match": "==|!=|<=?|>=?|=~"
        },
        {
          "name": "keyword.operator.arithmetic.sapl",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.filter.sapl",
          "match": "\\|-|\\|\\||::|:(?!:)"
        },
        {
          "name": "keyword.operator.subtemplate.sapl",
          "match": "::"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.sapl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*\\.)*[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "variable.other.attribute.sapl",
          "match": "<[a-zA-Z_][a-zA-Z0-9_.]*>"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.sapl",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.sapl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
