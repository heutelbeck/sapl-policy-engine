{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SAPL",
  "scopeName": "source.sapl",
  "fileTypes": ["sapl"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#entitlements" },
    { "include": "#algorithms" },
    { "include": "#authzVars" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#attributes" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sapl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.sapl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sapl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sapl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.sapl",
          "match": "-?\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "entitlements": {
      "patterns": [
        {
          "name": "storage.type.entitlement.sapl",
          "match": "\\b(permit|deny)\\b"
        }
      ]
    },
    "algorithms": {
      "patterns": [
        {
          "name": "storage.type.algorithm.sapl",
          "match": "\\b(first|priority|unanimous|strict|unique|or|abstain|propagate|errors)\\b"
        }
      ]
    },
    "authzVars": {
      "patterns": [
        {
          "name": "variable.language.authz.sapl",
          "match": "\\b(subject|action|resource|environment)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sapl",
          "match": "\\b(policy|set|for|var|as|import|schema|enforced|each|advice|obligation|transform|in)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.sapl",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.sapl",
          "match": "\\|?<[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*(\\([^)]*\\))?(\\[[^\\]]*\\])?>"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.sapl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.sapl",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.comparison.sapl",
          "match": "==|!=|<=|>=|<|>|=~"
        },
        {
          "name": "keyword.operator.arithmetic.sapl",
          "match": "[+\\-*/%^&|]"
        },
        {
          "name": "keyword.operator.filter.sapl",
          "match": "\\|-"
        },
        {
          "name": "keyword.operator.subtemplate.sapl",
          "match": "::"
        },
        {
          "name": "keyword.operator.relative.sapl",
          "match": "@"
        },
        {
          "name": "keyword.operator.relative-location.sapl",
          "match": "#"
        },
        {
          "name": "keyword.operator.head-attribute.sapl",
          "match": "\\|<"
        },
        {
          "name": "keyword.operator.recursive-descent.sapl",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.condition.sapl",
          "match": "\\?"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.sapl",
          "match": "[\\[\\]{}().,;:]"
        }
      ]
    }
  }
}
